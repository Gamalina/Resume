@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daniel Rud Callesen - Resume</title>
    <link rel="stylesheet" href="/css/Main.css">
</head>
<body>
    <h1>Welcome to my Cloud Resume Challenge</h1>
    <p>This page has been viewed <span id="viewCount">0</span> times.</p>

    <script>
        async function fetchViewCount() {
            try {
                const response = await fetch('https://<your-api-management-service>.azure-api.net/viewCount');
                const data = await response.json();
                document.getElementById('viewCount').innerText = data.count;
            } catch (error) {
                console.error('Error fetching view count:', error);
            }
        }

        fetchViewCount();
    </script>
    <script src="scripts.js"></script>
</body>
</html>

